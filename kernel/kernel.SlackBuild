INITRD=${INITRD:-yes}
if [ "$INITRD" = "yes" ]; then
        PKGINITRD=$PKG/kernel-initrd
        mkdir -p $PKGINITRD/boot
        
        ROOTFS=ext3
        ROOTDEV=/dev/md2
        MODULES_LIST=ext3
