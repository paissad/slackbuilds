		### packaging initrd
		cd $PKGINITRD
		chown -R root.root . 
		/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-initrd-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE \
		|| shellout "makepkg failed for $PKGINITRD" 

fi

